<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.canvas.Canvas?>
<SplitPane
        dividerPositions="0.2"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="dev.cnpuvache.gba.tile_manager.gui.ScreensTabController">
    <items>
        <Accordion>
            <panes>
                <TitledPane text="Select screen">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                            <children>
                                <HBox fillHeight="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                                    <children>
                                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="-" HBox.hgrow="ALWAYS" />
                                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="+" HBox.hgrow="ALWAYS" />
                                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="↓" HBox.hgrow="ALWAYS" />
                                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="↑" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <Label text="errorLabel" textFill="RED" />
                                <ListView maxHeight="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane text="Edit screen">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <GridPane hgap="5.0" vgap="5.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Background" />
                                        <Label text="Character data" GridPane.rowIndex="1" />
                                        <ChoiceBox maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
                                        <ChoiceBox maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
                                        <Label text="Palette" GridPane.rowIndex="2" />
                                        <Slider blockIncrement="1.0" majorTickUnit="5.0" max="15.0" maxWidth="1.7976931348623157E308" minorTickCount="4" showTickMarks="true" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />
                                        <CheckBox mnemonicParsing="false" text="H-Flip" GridPane.rowIndex="3" />
                                        <CheckBox mnemonicParsing="false" text="V-Flip" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    </children>
                                </GridPane>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
            </panes>
        </Accordion>
        <SplitPane dividerPositions="0.1" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0">
            <items>
                <Pane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <Canvas height="200.0" width="200.0" />
                    </children>
                </Pane>
                <Pane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <Canvas height="200.0" width="200.0" />
                    </children>
                </Pane>
            </items>
        </SplitPane>
    </items>
</SplitPane>
